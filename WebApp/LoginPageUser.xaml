<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApp.LoginPageUser"
             Title="LoginPageUser">


    
        <VerticalStackLayout Padding="30" Spacing="25">

            <Label
                HorizontalOptions="Center" 
                TextColor="red"
                Text="Fazer Login"
                FontSize="40"
         />


        <StackLayout Spacing="2" WidthRequest="400">
                <Label TextColor="red" Text ="E-mail"/>
                <Entry  BackgroundColor="#FF333333" Placeholder="Digite Email para login"/>
        </StackLayout>
        <StackLayout Spacing="2" WidthRequest="400">
                <Label TextColor="red" Text ="Senha"/>
                <Entry  BackgroundColor="#FF333333" Placeholder="Digite Senha para login"/>
        </StackLayout>




        

        <Button  Text="LOGAR" Clicked="Button_Clicked"
            BackgroundColor="Red" 
            TextColor="White"
            CornerRadius="10"
            HorizontalOptions="Center" 
        />
        

         <Label
                HorizontalOptions="Center" 
                Text="Esqueceu Senha? Clique aqui"
                FontSize="15"
         />


    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApp.MainPage">
    <ScrollView>

        <VerticalStackLayout Padding="30" Spacing="25">

            
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Sistema academia!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">

                <VerticalStackLayout Padding="30" Spacing="25">
                    <Label
                 Text="CADASTROS"
                 HorizontalOptions="Center"
                    FontSize="20"
                    TextColor="grey"
                 />
            <Button
                Text="Cadastrar Aluno"
                Clicked="Button_Clicked"
                HorizontalOptions="Center"
                WidthRequest="250"
                BackgroundColor="red"
                
                />

                <Button
                Text="Cadastrar Atendente"
                Clicked="Button_Clicked2"
                HorizontalOptions="Center"
                WidthRequest="250"
                BackgroundColor="red"
                />

            </VerticalStackLayout>

            <VerticalStackLayout Padding="30" Spacing="25">

                    <Label
                 Text="CONSULTA"
                 HorizontalOptions="Center"
                    FontSize="20"
                    TextColor="grey"
                 />

                    <Button
                Text="Buscar Alunos"
                Clicked="Busca_alunos"
                HorizontalOptions="Center"
                WidthRequest="250"
                BackgroundColor="green"
                />

                <Button
                Text="Buscar Atendentes"
                Clicked="Busca_atendente"
                HorizontalOptions="Center"
                WidthRequest="250"
                BackgroundColor="green"
                />



            </VerticalStackLayout>

            </HorizontalStackLayout>


                <Button
                Text="Gereneciamento de Ficha"
                Clicked="GerenciamentoFicha"
                HorizontalOptions="Center"
                WidthRequest="250"
                BackgroundColor="blue"
                />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApp.Cadastrar_Usuario"
             Title="Cadastrar_Usuario">


    <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center" >



             <StackLayout Spacing="2" WidthRequest="400">
                    <Label TextColor="red" Text ="USUÁRIO:"/>
                    <Entry  x:Name="UsernameEntry" BackgroundColor="#FF333333" Placeholder="Digite o nomde de usuário"/>
            </StackLayout>
            <StackLayout Spacing="2" WidthRequest="400">
                    <Label TextColor="red" Text ="SENHA:"/>
                    <Entry x:Name="PasswordEntry"  BackgroundColor="#FF333333" Placeholder="Crie Uma senha"/>
            </StackLayout>
            <StackLayout Spacing="2" WidthRequest="400">
                    <Label TextColor="red" Text ="CONFIRMAR SENHA:"/>
                    <Entry x:Name="PasswordEntryConfirm"  BackgroundColor="#FF333333" Placeholder="Confirmar Senha"/>
            </StackLayout>

            <Button  Text="CRIAR CONTA" Clicked="Cadastrar_User"
                BackgroundColor="Red" 
                TextColor="White"
                CornerRadius="20"
                HorizontalOptions="Center" 
            />



    </VerticalStackLayout>


</ContentPage>
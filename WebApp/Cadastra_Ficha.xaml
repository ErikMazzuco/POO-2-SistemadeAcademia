<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApp.Cadastra_Ficha"
             Title="Cadastra_Ficha">
    <VerticalStackLayout Spacing="20" Padding="25" HorizontalOptions="Center">

        <StackLayout Spacing="2" WidthRequest="400">
                <Label HorizontalOptions="Center" Text ="Descrição"/>
                <Entry x:Name="DescEntry" BackgroundColor="#FF333333" Placeholder="Digite a Descricao da Ficha"/>
                </StackLayout>

          <Button Text="CADASTRAR" Clicked="ButtonCadastra_Ficha"
                        BackgroundColor="green" 
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Center" />
        

    </VerticalStackLayout>
</ContentPage>